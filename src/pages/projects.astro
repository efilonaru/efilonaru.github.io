    image: "https://picsum.photos/500",
    repoUrl: "https://github.com/efilonaru/project-one",
    liveUrl: "https://project-one.example.com",
    tags: ["React", "TypeScript", "Tailwind"],
  },
  {
    title: "Project Two",
    description:
      "A brief description of project two that highlights its key features and technologies.",
    image: "https://picsum.photos/500",
    repoUrl: "https://github.com/efilonaru/project-two",
    tags: ["Node.js", "Express", "MongoDB"],
  },
  {
    title: "Project Three",
    description:
      "A brief description of project three that highlights its key features and technologies.",
    image: "https://picsum.photos/500",
    liveUrl: "https://project-three.example.com",
    tags: ["Python", "Django", "PostgreSQL"],
  },
  {
    title: "Project Four",
    description:
      "A brief description of project four that highlights its key features and technologies.",
    image: "https://picsum.photos/500",
