---
interface Props {
  title: string;
  description: string;
  image: string;
  repoUrl?: string;
  liveUrl?: string;
  tags?: string[];
}

const {
  title,
  description,
  image,
  repoUrl,
  liveUrl,
  tags = ["Astro", "Tailwind", "TypeScript"],
} = Astro.props;
---

<div class="group">
  <div
    class="p-2 rounded-lg border border-zinc-800 hover:border-zinc-600 transition-colors"
  >
    <div class="aspect-[16/9] overflow-hidden">
      <img src={image} alt="Project Image" />
    </div>
    <h2
      class="text-lg font-semibold text-zinc-400 group-hover:text-zinc-300 transition-colors mt-2"
    >
      {title}
    </h2>
    <p class="text-zinc-400 text-justify">
      {description}
    </p>
    <div class="flex flex-wrap gap-2 mt-2">
      {
        tags.map((tag) => (
          <span class="text-xs text-zinc-400 bg-zinc-800 px-2 py-1 rounded-md">
            {tag}
          </span>
        ))
      }
    </div>
    <div class="flex gap-3 mt-4">
      {
        repoUrl && (
          <a
            href={repoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-zinc-400 hover:text-zinc-300  flex items-center gap-1 border rounded-md px-2 py-1 border-zinc-800"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-github"
            >
              <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
              <path d="M9 18c-4.51 2-5-2-7-2" />
            </svg>
            Repository
          </a>
        )
      }
      {
        liveUrl && (
          <a
            href={liveUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-zinc-400 hover:text-zinc-300 transition-colors flex items-center gap-1 border rounded-md px-2 py-1 border-zinc-800"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-external-link"
            >
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
              <polyline points="15 3 21 3 21 9" />
              <line x1="10" y1="14" x2="21" y2="3" />
            </svg>
            Visit Site
          </a>
        )
      }
    </div>
  </div>
</div>
